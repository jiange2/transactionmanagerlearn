    </aop:config>

    <tx:advice id="jdbcAdvice">
        <tx:attributes>
            <tx:method name="require" propagation="REQUIRES_NEW"/>
            <tx:method name="*" />
        </tx:attributes>
    </tx:advice>
-->
</beans>